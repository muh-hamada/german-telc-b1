{
  "name": "video-generator-functions",
  "version": "1.0.0",
  "description": "Firebase Cloud Functions for automated YouTube Shorts video generation",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/storage": "^7.7.0",
    "dotenv": "^17.2.3",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^133.0.0",
    "puppeteer": "^22.0.0"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "private": true
}
