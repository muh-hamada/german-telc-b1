rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // B1 Telc Exam Data Collection
    // Only authenticated users can read and write
    match /b1_telc_exam_data/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User profiles
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // User progress data (legacy)
      match /progress/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User exam results (legacy)
      match /examResults/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User completions
      // Allow users to read/write their own completion data
      match /completions/{examType}/{partNumber}/{examId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}

